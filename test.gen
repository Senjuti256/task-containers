FROM registry.redhat.io/rhel8/go-toolset:1.19.9-2
LABEL "io.openshift.s2i.build.source-location"="https://github.com/Senjuti256/goHelloWorld" \
      "io.openshift.s2i.build.image"="registry.redhat.io/rhel8/go-toolset:1.19.9-2" \
      "io.openshift.s2i.build.commit.author"="Chris Collins <collins.christopher@gmail.com>" \
      "io.openshift.s2i.build.commit.date"="Sat Feb 27 11:45:30 2021 -1000" \
      "io.openshift.s2i.build.commit.id"="46d43b19cc349979a0e04684302dd018a9e2c168" \
      "io.openshift.s2i.build.commit.ref"="main" \
      "io.openshift.s2i.build.commit.message"="Adds test to build_release"

USER root
# Copying in source code
COPY upload/src /tmp/src
# Change file ownership to the assemble user. Builder image must support chown command.
RUN chown -R 1001:0 /tmp/src
USER 1001
# Assemble script sourced from builder image based on user input or image metadata.
# If this file does not exist in the image, the build will fail.
RUN /usr/libexec/s2i/assemble
# Run script sourced from builder image based on user input or image metadata.
# If this file does not exist in the image, the build will fail.
CMD /usr/libexec/s2i/run
